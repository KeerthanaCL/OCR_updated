# Application Settings
APP_NAME=Document Extraction API
APP_VERSION=1.0.0
DEBUG=True

# OCR Settings
TESSERACT_CONFIDENCE_THRESHOLD=60
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng

# TrOCR Model
TROCR_MODEL_NAME=microsoft/trocr-base-printed
TROCR_HANDWRITTEN_MODEL=microsoft/trocr-base-handwritten

# Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Database
DATABASE_URL=sqlite:///./documents.db

# Redis for Celery
REDIS_URL=redis://localhost:6379/0